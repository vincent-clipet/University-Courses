	<context-param> 
		<param-name>db_name</param-name> 
		<param-value>PostgreSQL</param-value> 
		<description>Nom du DBMS</description> 
	</context-param>
	<context-param> 
		<param-name>db_prefix</param-name> 
		<param-value>[PostgreSQL] </param-value> 
		<description>Prefixe pour les logs</description> 
	</context-param>
	<context-param> 
		<param-name>db_url</param-name> 
		<param-value>jdbc:postgresql://psqlserv:5432/da2i</param-value> 
		<description>Url de connexion</description> 
	</context-param>
	<context-param> 
		<param-name>db_dbname</param-name> 
		<param-value>da2i</param-value> 
		<description>Nom de la BDD</description> 
	</context-param>
	<context-param> 
		<param-name>db_hostname</param-name> 
		<param-value>psqlserv</param-value> 
		<description>Hostname de la BDD</description> 
	</context-param>
	<context-param> 
		<param-name>db_driver</param-name> 
		<param-value>org.postgresql.Driver</param-value> 
		<description>Classe du driver</description> 
	</context-param>
	<context-param> 
		<param-name>db_port</param-name> 
		<param-value>5432</param-value> 
		<description>Port de connexion</description> 
	</context-param>
	<context-param> 
		<param-name>db_user</param-name> 
		<param-value>clipetv</param-value> 
		<description>Username</description> 
	</context-param>
	<context-param> 
		<param-name>db_password</param-name> 
		<param-value>moi</param-value> 
		<description>Password</description> 
	</context-param>
	


    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>

</web-app>
